<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="5dp"
    app:cardElevation="1dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="5dp">

        <ImageView
            android:id="@+id/grid_imageView_image"
            android:layout_width="match_parent"
            android:layout_height="120dp"
            android:layout_alignParentBottom="true"
            android:layout_below="@id/grid_textView_title" />

        <com.github.curioustechizen.ago.RelativeTimeTextView
            android:id="@+id/grid_textView_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:text="Time"
            android:layout_marginBottom="5dp"
            android:textSize="12sp"
            android:fontFamily="@font/rubik_light_italic"/>

        <TextView
            android:id="@+id/grid_textView_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/grid_textView_source"
            android:fontFamily="@font/rubik_regular"
            android:text="Title"
            android:layout_marginBottom="5dp"
            android:textSize="14sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/grid_textView_source"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/rubik_light_italic"
            android:text="Source"
            android:layout_marginBottom="5dp"
            android:textSize="12sp" />

    </RelativeLayout>
</android.support.v7.widget.CardView>