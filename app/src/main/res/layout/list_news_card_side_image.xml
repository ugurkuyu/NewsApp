<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="3dp"
    app:cardCornerRadius="5dp"
    app:cardElevation="1dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/side_image_title"
            android:layout_width="wrap_content"
            android:paddingTop="30dp"
            android:paddingLeft="5dp"
            android:paddingRight="5dp"
            android:layout_height="wrap_content"
            android:text="Title"
            android:textSize="14sp"
            android:textStyle="bold"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true" />

        <TextView
            android:id="@+id/side_image_source"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingTop="10dp"
            android:paddingLeft="5dp"
            android:paddingRight="5dp"
            android:text="Source"
            android:textStyle="italic"
            android:textSize="12sp"
            android:layout_below="@id/side_image_title"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true" />

        <com.github.curioustechizen.ago.RelativeTimeTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/side_image_timestamp"
            android:text="Time"
            android:textStyle="italic"
            android:textSize="12sp"
            android:layout_alignBottom="@id/side_image_source"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:paddingRight="160dp"
            android:paddingLeft="160dp"
            android:paddingEnd="160dp"
            android:paddingStart="160dp"/>

        <ImageView
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:id="@+id/side_image_imageView"/>
    </RelativeLayout>

</android.support.v7.widget.CardView>